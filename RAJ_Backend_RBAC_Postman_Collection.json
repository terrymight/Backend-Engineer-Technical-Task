{
  "info": {
    "name": "RAJ Consulting \u2013 Backend Engineer Technical Task",
    "description": "Postman collection for Laravel Passport authentication and custom RBAC API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Super Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"hilma.kihn@example.net\",\n  \"password\": \"password\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.success && res.data.access_token) {",
                  "  pm.environment.set('access_token', res.data.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
